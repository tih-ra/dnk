<h1>Загрузить картинку</h1><br/>
<% form_for :image, :url=>images_path, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label "Файл" %><br />
    <%= f.file_field :uploaded_data %>
  </p>
  
  <p>
    <%= f.submit "Сохранить" %>
  </p>
<% end %>
</hr>
<% @images.each do |image|%>
	<% unless image.filename.nil? %>
	<%=image_tag(image.public_filename)%> <%=minidelete_link(image)%>
	<% end %>
<% end %>
<br/>

<%= link_to 'Назад', "/" %>