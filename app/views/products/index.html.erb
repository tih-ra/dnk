<br/>
<h1>Продукты (<%= link_to image_tag("create.png"), new_product_path %>)</h1>

<% for product in @products %>
<p>
<h2><%= link_to h(product.title), product_path(product)%> (<%= link_to image_tag("edit.png"), edit_product_path(product) %> | <%= link_to image_tag("delete.png"), product, :confirm => 'Are you sure?', :method => :delete %>)</h2>  
<%=cut_text product.content, product_path(product) %>
<% product.tag_counts.each do |tag|%>
	<%=link_to h(tag.name), tag_product_path(tag.name), :class=>"tag"%>
<%end unless product.tag_counts.nil? %>
</p>   
<br/>
<% end %>
<p>
	<%=will_paginate @products%>
</p>

