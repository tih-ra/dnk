<h1>Редактировать карту</h1><br/>
<% @maps.each do |map|%>
<% form_for :map, map, :url=>map_path(map), :html=>{:method=>:put}  do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label map.city %><br />
    <%= f.text_area :content, :style=>"width:500px;height:60px" %>
  </p>
  <p>
    <%= f.submit "Сохранить" %>
  </p>
<% end %>
<% end %>
<%= link_to 'Назад', maps_path %>
