
<h1>Редактировать блог</h1><br/>

<% form_for(@blog) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label "Заголовок" %><br />
    <%= f.text_field :title, :style=>"width:700px" %>
  </p>
  <p>
    <%= f.label "Содержание" %><br />
    <%= f.text_area :content, :style=>"width:700px;height:500px" %>
  </p>
  <p>
    <%= f.label "Теги" %><br />
    <%= f.text_field :tag_list, :style=>"width:700px" %>
  </p>
  <p>
    <%= f.submit "Сохранить" %>
  </p>
<% end %>

<%= link_to 'Назад', blogs_path %>
